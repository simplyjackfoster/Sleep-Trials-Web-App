// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // App relations
  ownedGroups   Group[]       @relation("GroupOwner")
  memberships   GroupMember[]
  sleepEntries  SleepEntry[]
  scoreEvents   ScoreEvent[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App Models

model Group {
  id        String   @id @default(cuid())
  name      String
  joinCode  String   @unique
  ownerId   String
  createdAt DateTime @default(now())

  owner   User          @relation("GroupOwner", fields: [ownerId], references: [id])
  members GroupMember[]

  sleepEntries   SleepEntry[]
  scoringConfigs ScoringConfig[]
  scoreEvents    ScoreEvent[]
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("MEMBER") // OWNER, MEMBER
  joinedAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model SleepEntry {
  id           String   @id @default(cuid())
  groupId      String
  userId       String
  date         DateTime // The "night" date (normalized to YYYY-MM-DD 00:00:00 UTC usually, or just store date part)
  sleepMinutes Int
  source       String   // Oura, Apple, Garmin, Manual
  confidence   String   // MEASURED, ESTIMATED
  note         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId, date])
}

model ScoringConfig {
  id             String   @id @default(cuid())
  groupId        String
  activeFromDate DateTime
  mode           String   // RANK, THRESHOLD
  configJson     String   // JSON string of rules
  createdAt      DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model ScoreEvent {
  id           String   @id @default(cuid())
  groupId      String
  userId       String
  date         DateTime
  points       Int
  reason       String? // e.g. "Rank 1", "Threshold > 7.5h", "Streak Bonus"
  metadataJson String? // For audit details
  createdAt    DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId, date, reason]) // Keep unique per day+reason? Or just compound index for lookup?
  // Actually, we might have multiple events per day (base points + streak bonus). 
  // So unique constraint might be too strict if we want separate rows.
  // Unless we aggregate before saving? Let's remove unique constraint on reason, just index.
  @@index([groupId, date])
}
